<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme untuk mode terang -->
    <style name="Base.Theme.RANTS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Menggunakan warna putih sebagai background di mode terang -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item> <!-- Menggunakan windowBackground yang lebih tepat -->

        <!-- Mengatur warna teks di mode terang -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>

        <!-- Menyesuaikan warna ikon di mode terang -->
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorOnBackground">@android:color/black</item>

        <!-- Menyesuaikan warna status bar untuk mode terang -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Ikon status bar menjadi gelap agar kontras dengan latar belakang putih -->
    </style>
</resources>
