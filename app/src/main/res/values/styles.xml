<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style untuk teks tanggal di CalendarView -->
    <style name="CalendarDateText">
        <item name="android:textSize">14sp</item> <!-- Ukuran teks -->
        <item name="android:textColor">@color/black</item> <!-- Warna teks -->
        <item name="android:fontFamily">@font/poppins</item> <!-- Jenis font -->
        <item name="android:textStyle">bold</item> <!-- Gaya teks -->

    </style>
<!-- Style untuk navbar bawah -->
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textColor">@drawable/navbar_text_tint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:itemTextAppearance">@style/TextAppearance.App</item>
    </style>

    <style name="TextAppearance.App">
    <item name="android:textColor">@color/grey</item> <!-- Teks berwarna grey -->
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Define custom shadow for Toolbar -->
    <style name="ToolbarShadow" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:elevation">8dp</item>  <!-- Adjust elevation for shadow intensity -->
        <item name="android:translationZ">4dp</item> <!-- Add translationZ for more shadow depth -->
    </style>


    <style name="CustomMaterialDatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Warna utama tombol OK dan BATAL -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Warna teks di dalam kalender -->
        <item name="colorOnSurface">@android:color/black</item>

        <!-- Warna latar belakang kalender -->
        <item name="colorSurface">@android:color/white</item>

        <!-- Warna teks yang dipilih -->
        <item name="colorAccent">@color/purple_500</item>
    </style>



    <style name="TextAppearance">m</style>


</resources>