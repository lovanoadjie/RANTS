<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatadminActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="10dp"
        android:id="@+id/toolbar">

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back_botton"
            android:layout_marginTop="5dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:id="@+id/back_btn"/>

        <ImageView
            android:id="@+id/fotoProfil"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_background"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/back_btn"
            android:src="@drawable/baseline_person_24"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/fotoProfil"
       />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:id="@+id/bottom_layout">

        <EditText
            android:id="@+id/edittext"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Write messege here"
            android:layout_centerInParent="true"
            android:layout_margin="7dp"
            android:background="@drawable/chat_admin"
            android:elevation="4dp"
            android:padding="5dp"
            android:layout_toLeftOf="@+id/messege_send_btn"/>
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_send_28"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/blue"
            android:id="@+id/messege_send_btn"
            android:padding="8dp"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>




</RelativeLayout>